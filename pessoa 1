
package pessoa;


public class classePessoa {
    private String nome;
    private int idade;
    private double altura;
    private double peso;
    
    public classePessoa(String nome, int idade, double altura, double peso){
        this.nome= nome;
        this.idade = idade;
        this.altura = altura;
        this.peso = peso;
        
    }
    
    public void exibir(){
        System.out.println("Nome:" + nome);
        System.out.println("Idade:" + idade);
        System.out.println("Altura:" + peso);
        System.out.println("Peso:" + peso);
   
       
    }
   
    public double getAltura(){
       return altura; 
    }
}
